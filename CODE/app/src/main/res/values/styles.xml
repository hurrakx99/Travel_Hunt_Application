<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2167F3</item>
        <item name="colorPrimaryDark">#2020EC</item>
        <item name="colorAccent">#2144F3</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
    </style>
    <style name="actionbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2167F3</item>
        <item name="colorPrimaryDark">#2020EC</item>
        <item name="colorAccent">#2144F3</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:textColor">#2020EC</item>
    </style>

    <style name="navigation">
        <item name="colorPrimary">#134FE4</item>
        <item name="colorControlHighlight">#D2BDBDBD</item>
    </style>

    <style name="Ratingbar" parent="Theme.AppCompat">
    <item name="colorControlNormal">#ABD5F6</item>
    <item name="colorControlActivated">#FFC107</item>
</style>

    <!--Rating dialog-->

    <style name="RatingDialogFadeAnim">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="errorToast">
        <item name="stColorBackground">#E41717</item>
        <item name="stTextColor">#ffffff</item>
    </style>
</resources>