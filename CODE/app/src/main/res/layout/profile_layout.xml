<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_marginStart="45dp"
    android:layout_marginEnd="45dp"
    android:background="@drawable/popup_bg"
    android:padding="5dp"
    android:layout_gravity="center"
    android:layout_height="400dp">

    <TextView
        android:id="@+id/closetxt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/close_bg"
        android:gravity="center"
        android:text="X"
        android:textColor="#FFF"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/custprofile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            app:civ_border_width="1sp"
            app:civ_border_color="#C3C1C1"/>
        <TextView
            android:id="@+id/custname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rohit sanjay Patil"
            android:layout_below="@+id/custprofile"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/custemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rohitspatil68@gmail.com"
            android:layout_below="@+id/custname"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#DDDCDC"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/custphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="91480210600"
            android:layout_below="@+id/custemail"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/deleteact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete A/C"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/resetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/signoutact"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_above="@id/resetpassword"
        android:text="Sign out"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/deletebtn_bg"/>

    </RelativeLayout>
</LinearLayout>