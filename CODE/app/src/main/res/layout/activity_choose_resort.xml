<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#FFF"
    tools:context=".firebasepackageload.Choose_resort">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/faci"
        android:background="#F3EFEF"
        android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="#F3EFEF">

        <ImageView
            android:id="@+id/poolimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/pool_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poolimg"
            android:text="Pool"
            android:textColor="#7F358C"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/wifiimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/poolimg"
            android:src="@drawable/wifi_icon" />

        <TextView
            android:id="@+id/internet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wifiimg"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@+id/poolimg"
            android:text="Internet"
            android:textColor="#7F358C"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/breakimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/internet"
            android:src="@drawable/breakfast_icon" />

        <TextView
            android:id="@+id/breaktxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poolimg"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@+id/internet"
            android:text="Breakfast"
            android:textColor="#7F358C"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/breaktxt"
            android:src="@drawable/restaurant_icon" />

        <TextView
            android:id="@+id/restauranttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wifiimg"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@+id/breaktxt"
            android:text="Restaurant"
            android:textColor="#7F358C"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/restauranttxt"
            android:src="@drawable/cab_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wifiimg"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@id/restauranttxt"
            android:text="Cab Service"
            android:textColor="#7F358C"
            android:textSize="14sp" />

    </RelativeLayout>
    </HorizontalScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:layout_below="@id/faci"
        android:background="#A3A2A2"/>

    <RelativeLayout
        android:id="@+id/rooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:background="#FBFAFA">

        <TextView
            android:id="@+id/ro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/mulie"
            android:padding="5dp"
            android:text="Rooms"
            android:textColor="#5F5178"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ro"
            android:layout_marginStart="12dp"
            android:drawableStart="@drawable/check_icon"
            android:fontFamily="@font/mulie"
            android:paddingBottom="7dp"
            android:text="All rooms includes all above facilities"
            android:textColor="#5F5178"
            android:textSize="14sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view2"
        android:layout_below="@id/rooms"
        android:background="#A3A2A2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view2"
        android:background="#E1DFDF"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-7dp"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/resortdulex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/resortdeluximg"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/resortdeluxtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/resortdeluximg"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/mulie"
                        android:text="Hotel Taj"
                        android:textColor="#232323"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dulexlocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/resortdeluxtitle"
                        android:layout_marginStart="10dp"
                        android:drawableStart="@drawable/location_resort"
                        android:fontFamily="@font/mulie"
                        android:text="Goa"
                        android:textColor="#918F8F"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dulexlocation"
                        android:layout_marginRight="2dp"
                        android:layout_toLeftOf="@id/dulexprice"
                        android:text="₹"
                        android:textAlignment="center"
                        android:textColor="#4776e6"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dulexprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dulexlocation"
                        android:layout_toLeftOf="@id/pricetag"
                        android:text="250"
                        android:textAlignment="center"
                        android:textColor="#4776e6"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pricetag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dulexlocation"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="15dp"
                        android:text="/-"
                        android:textAlignment="center"
                        android:textColor="#4776e6"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="137dp"
                        android:background="@drawable/daynight_bg"
                        android:padding="4dp"
                        android:text="Dulex Resort"
                        android:textColor="#EC070707"
                        android:textSize="10sp"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dulexprice"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-4dp"
                        android:text="Per person"
                        android:textColor="#C3C4C5"
                        android:textSize="10sp"
                        android:textStyle="italic" />

                    <RatingBar
                        android:id="@+id/dulexrate"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="91dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dulexlocation"
                        android:layout_marginStart="7dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:padding="5dp"
                        android:rating="0"
                        android:stepSize="0.5"
                        android:theme="@style/Ratingbar" />

                    <TextView
                        android:id="@+id/dulexratetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dulexlocation"
                        android:layout_toRightOf="@+id/dulexrate"
                        android:padding="5dp"
                        android:text="(4.8)"
                        android:textColor="#4776e6"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/dulexrate"
                        android:layout_marginTop="15dp"
                        android:id="@+id/view3"
                        android:background="#DCD8D8" />
                        <TextView
                            android:id="@+id/readmore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/mulie"
                            android:padding="10dp"
                            android:layout_below="@id/view3"
                            android:text="Room Information"
                            android:textColor="#5F5178" />

                    <net.cachapa.expandablelayout.ExpandableLayout
                        android:id="@+id/dulexmyexpandable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/readmore"
                        android:orientation="vertical"
                        app:el_duration="400"
                        android:layout_marginTop="-10dp"
                        app:el_expanded="false">

                        <TextView
                            android:id="@+id/dulexdescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/readmore"
                            android:layout_marginTop="-2dp"
                            android:lineSpacingExtra="2dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="5dp"
                            android:text="      From the heights of Table Mountain to the dramatic stretches of coastline, Cape Town's wonderful weather year-round makes it a popular destination for beach lovers and wine aficionados alike. Its world-famous Kirstenbosch Botanical Gardens and Green Point Park compliment these natural blessings wonderfully."
                            android:textColor="#B0AFB1"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </net.cachapa.expandablelayout.ExpandableLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/resortsemidelux"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cho"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/semideluximg"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/semiresortdeluxtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/semideluximg"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/mulie"
                        android:text="Hotel Taj"
                        android:textColor="#232323"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/semidulexlocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/semiresortdeluxtitle"
                        android:layout_marginStart="10dp"
                        android:drawableStart="@drawable/location_resort"
                        android:fontFamily="@font/mulie"
                        android:text="Goa"
                        android:textColor="#918F8F"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/semidulexlocation"
                        android:layout_marginRight="2dp"
                        android:layout_toLeftOf="@id/semidulexprice"
                        android:text="₹"
                        android:textAlignment="center"
                        android:textColor="#4776e6"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/semidulexprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/semidulexlocation"
                        android:layout_toLeftOf="@id/semipricetag"
                        android:text="250"
                        android:textAlignment="center"
                        android:textColor="#4776e6"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="137dp"
                        android:background="@drawable/daynight_bg"
                        android:padding="4dp"
                        android:text="Semi-Dulex"
                        android:textColor="#EC070707"
                        android:textSize="10sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/semipricetag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/semidulexlocation"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="15dp"
                        android:text="/-"
                        android:textAlignment="center"
                        android:textColor="#4776e6"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/semidulexprice"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-4dp"
                        android:text="Per person"
                        android:textColor="#C3C4C5"
                        android:textSize="10sp"
                        android:textStyle="italic" />

                    <RatingBar
                        android:id="@+id/semidulexrate"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="91dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/semidulexlocation"
                        android:layout_marginStart="7dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:padding="5dp"
                        android:rating="0"
                        android:stepSize="0.5"
                        android:theme="@style/Ratingbar" />

                    <TextView
                        android:id="@+id/semidulexratetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/semidulexlocation"
                        android:layout_toRightOf="@+id/semidulexrate"
                        android:padding="5dp"
                        android:text="(4.8)"
                        android:textColor="#4776e6"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/semidulexrate"
                        android:layout_marginTop="15dp"
                        android:id="@id/view4"
                        android:background="#DCD8D8" />
                        <TextView
                            android:id="@+id/semireadmore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:layout_below="@+id/view4"
                            android:fontFamily="@font/mulie"
                            android:padding="10dp"
                            android:text="Room Information"
                            android:textColor="#5F5178" />

                    <net.cachapa.expandablelayout.ExpandableLayout
                        android:id="@+id/semimyexpandable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/semireadmore"
                        android:orientation="vertical"
                        app:el_duration="400"
                        android:layout_marginTop="-10dp"
                        app:el_expanded="false">

                        <TextView
                            android:id="@+id/semidulexdescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/semireadmore"
                            android:layout_marginTop="-2dp"
                            android:elevation="5dp"
                            android:lineSpacingExtra="2dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="5dp"
                            android:text="      From the heights of Table Mountain to the dramatic stretches of coastline, Cape Town's wonderful weather year-round makes it a popular destination for beach lovers and wine aficionados alike. Its world-famous Kirstenbosch Botanical Gardens and Green Point Park compliment these natural blessings wonderfully."
                            android:textColor="#B0AFB1"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </net.cachapa.expandablelayout.ExpandableLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>