<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:id="@+id/internationaluploadview">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backward"
            android:layout_margin="10dp"
            android:id="@+id/upinternationalback"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="international view Package"
                android:fontFamily="@font/mulie"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:textColor="#000"/>

            <ImageView
                android:id="@+id/packageimg"
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/not" />


            <EditText
                android:id="@+id/upinternationaltitle"
                android:layout_width="match_parent"
                android:ems="10"
                android:paddingStart="10dp"
                android:background="@drawable/bginput"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:inputType="text"
                android:hint="Title" />
            <EditText
                android:id="@+id/upinternationallocation"
                android:layout_width="match_parent"
                android:background="@drawable/bginput"
                android:layout_height="50dp"
                android:ems="10"
                android:paddingStart="10dp"
                android:inputType="text"
                android:hint="Location" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/upinternationalprice"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bginput"
                    android:ems="10"
                    android:hint="Price"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/upinternationalday"
                    android:layout_width="130dp"
                    android:background="@drawable/bginput"
                    android:layout_height="50dp"
                    android:paddingStart="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/upinternationalprice"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:textAllCaps="true"
                    android:inputType="text"
                    android:hint="Days" />


            </RelativeLayout>

            <EditText
                android:id="@+id/upinternationaldescription"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bginput"
                android:ems="10"
                android:hint="Description"
                android:inputType="text"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/upinternationaltips"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bginput"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:hint="tour tips"
                android:inputType="text"
                android:paddingStart="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Photos"
                android:fontFamily="@font/mulie"
                android:textSize="18sp"
                android:textColor="#000"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/not"
                        android:id="@+id/upinternationalimg1"/>
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/not"
                        android:layout_marginStart="10dp"
                        android:id="@+id/upinternationalimg2"/>

                    <ImageView
                        android:id="@+id/upinternationalimg3"
                        android:layout_width="72dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/not" />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/not"
                        android:layout_marginStart="10dp"
                        android:id="@+id/upinternationalimg4"/>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Acitvities"
                android:fontFamily="@font/mulie"
                android:textSize="18sp"
                android:textColor="#000"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/not"
                        android:layout_marginStart="10dp"
                        android:id="@+id/upinternationalimg5"/>

                    <EditText
                        android:id="@+id/internationalactivitytitle1"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="90dp"
                        android:background="@drawable/bginput"
                        android:ems="10"
                        android:hint="activity1"
                        android:inputType="text"
                        android:paddingStart="10dp" />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/not"
                        android:layout_marginStart="100dp"
                        android:id="@+id/upinternationalimg6"/>
                    <EditText
                        android:id="@+id/internationalactivitytitle2"
                        android:layout_width="80dp"
                        android:background="@drawable/bginput"
                        android:layout_height="50dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="90dp"
                        android:ems="10"
                        android:paddingStart="10dp"
                        android:hint="activity2"
                        android:inputType="text" />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/not"
                        android:layout_marginStart="200dp"
                        android:id="@+id/upinternationalimg7"/>
                    <EditText
                        android:id="@+id/internationalactivitytitle3"
                        android:layout_width="80dp"
                        android:background="@drawable/bginput"
                        android:layout_height="50dp"
                        android:layout_marginStart="200dp"
                        android:layout_marginTop="90dp"
                        android:ems="10"
                        android:paddingStart="10dp"
                        android:hint="activity3"
                        android:inputType="text" />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:paddingStart="10dp"
                        android:src="@drawable/not"
                        android:layout_marginStart="300dp"
                        android:id="@+id/upinternationalimg8"/>
                    <EditText
                        android:id="@+id/internationalactivitytitle4"
                        android:layout_width="80dp"
                        android:paddingStart="10dp"
                        android:background="@drawable/bginput"
                        android:layout_height="50dp"
                        android:layout_marginStart="300dp"
                        android:layout_marginTop="90dp"
                        android:ems="10"
                        android:hint="activity4"
                        android:inputType="text" />
                </RelativeLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Resort details"
                android:textSize="16sp"
                android:fontFamily="@font/mulie"
                android:textColor="#000"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/delux"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/mulie"
                    android:text="Delux resorts"
                    android:textColor="#000"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/upinternationalimg9"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/delux"
                    android:layout_gravity="center"
                    android:layout_marginStart="65dp"
                    android:layout_marginBottom="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/not" />

            <EditText
                android:id="@+id/internationalresorttitle"
                android:layout_width="wrap_content"
                android:background="@drawable/bginput"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:ems="10"
                android:layout_below="@+id/upinternationalimg9"
                android:hint="name"
                android:paddingStart="10dp"
                android:inputType="text" />

            <EditText
                android:id="@+id/internationalresortlocation"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bginput"
                android:ems="10"
                android:layout_below="@+id/internationalresorttitle"
                android:paddingStart="10dp"
                android:hint="location"
                android:inputType="text" />

                <EditText
                    android:id="@+id/internationalresortdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/internationalresortlocation"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bginput"
                    android:ems="10"
                    android:hint="description"
                    android:inputType="text"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/internationalresortprice"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/internationalresortdetails"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bginput"
                    android:ems="10"
                    android:hint="Price of per person"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/internationalresortrating"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/internationalresortprice"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bginput"
                    android:ems="10"
                    android:hint="Rating"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:padding="5dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Semi-Delux resorts"
                    android:layout_toRightOf="@+id/internationalresortdetails"
                    android:textSize="14sp"
                    android:id="@+id/semidelux"
                    android:fontFamily="@font/mulie"
                    android:textColor="#000"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/not"
                    android:layout_below="@+id/semidelux"
                    android:layout_toRightOf="@+id/internationalresortdetails"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    android:id="@+id/upinternationalimg10"/>

                <EditText
                    android:id="@+id/internationalresorttitle2"
                    android:layout_width="wrap_content"
                    android:background="@drawable/bginput"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:ems="10"
                    android:layout_below="@+id/upinternationalimg10"
                    android:hint="name"
                    android:layout_toRightOf="@+id/internationalresortdetails"
                    android:paddingStart="10dp"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/internationalresortlocation2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bginput"
                    android:ems="10"
                    android:layout_below="@+id/internationalresorttitle2"
                    android:paddingStart="10dp"
                    android:hint="location"
                    android:layout_toRightOf="@+id/internationalresortdetails"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/internationalresortdetails2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/internationalresortlocation2"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bginput"
                    android:ems="10"
                    android:layout_toRightOf="@+id/internationalresortdetails"
                    android:hint="description"
                    android:inputType="text"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/internationalresortprice2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/internationalresortdetails2"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bginput"
                    android:ems="10"
                    android:layout_toRightOf="@+id/internationalresortdetails"
                    android:hint="Price of per person"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="5dp" />
                <EditText
                    android:id="@+id/internationalresortrating2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/internationalresortprice2"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bginput"
                    android:ems="10"
                    android:layout_toRightOf="@+id/internationalresortdetails"
                    android:hint="Rating"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:padding="5dp" />

            </RelativeLayout>
            </HorizontalScrollView>
            <Button
                android:id="@+id/upinternationaldata"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/round_btn_bg"
                android:text="Upload"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
