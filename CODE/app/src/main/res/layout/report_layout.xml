<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:layout_marginStart="45dp"
    android:layout_marginEnd="45dp"
    android:background="@drawable/popup_bg"
    android:backgroundTint="#1A255A"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/reportclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/close_bg"
        android:gravity="center"
        android:text="X"
        android:textColor="#FFF"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/brandon_grotesque"
        android:padding="10dp"
        android:text="Report any problem"
        android:textColor="#FFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/typereport"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:maxLines="50"
        android:maxLength="50"
        android:gravity="top"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bginput2"
        android:hint="Type something"
        android:padding="15dp" />

    <Button
        android:id="@+id/reportbtn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/deletebtn_bg"
        android:text="Send"
        android:textColor="#FFFFFF" />

</LinearLayout>