<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".main.MainActivity">
    <TextView
        android:id="@+id/wel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="WELCOME"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="26sp"
        android:fontFamily="@font/mulie"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/autoid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/wel"
        android:padding="10dp"
        android:text="Automatic identify verification which enables you to verify your identity"
        android:textSize="16sp"
        android:fontFamily="@font/mulir"
        android:textStyle="bold"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="20dp"
        android:textColor="#535252"/>

        <ImageView
            android:id="@+id/homeimg"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_above="@id/signin"
            android:layout_below="@id/autoid"
            android:scaleType="fitXY" />


        <Button
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#033FF6"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_above="@id/signup"
            android:background="@drawable/loginbtn_bg"
            android:layout_centerHorizontal="true"
            android:id="@+id/signin"/>
    <Button
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/round_btn_bg"
        android:layout_centerHorizontal="true"
        android:id="@+id/signup"/>
</RelativeLayout>