<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    android:orientation="vertical"
    android:padding="5dp">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_bg"
        app:title="Travel Hunt"
        app:titleMarginStart="10dp"
        app:titleTextColor="#134FE4"
        android:layout_margin="5dp"
        android:id="@+id/admintoolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/packagesid"
        android:paddingTop="3dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/domesticup"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/demostic_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/mulie"
                        android:text="Domestic"
                        android:textColor="#FFF"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulie"
                        android:text="Upload demostic packages means inside our country destinations"
                        android:textColor="#FFF"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/updomesticimg"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:padding="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/internationup"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/international_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/mulie"
                        android:text="International"
                        android:textColor="#FFF"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulie"
                        android:text="Upload international package which are outside the nation"
                        android:textColor="#FFF"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/upinternationaimg"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:padding="8dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/popularup"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/popular_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/mulie"
                        android:text="Popular"
                        android:textColor="#FFF"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulie"
                        android:text="Upload packages which tourist love to visit these famous places."
                        android:textColor="#FFF"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/uppopularimg"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:padding="8dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/religiousup"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/religious_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/mulie"
                        android:text="Religious"
                        android:textColor="#FFF"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulie"
                        android:text="Upload dharmik places which are located around the world"
                        android:textColor="#FFF"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/upreligiousimg"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/religiousimg" />
            </LinearLayout>
            <LinearLayout
                        android:id="@+id/fortup"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/fort_bg"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/mulie"
                                android:text="Fort View"
                                android:textColor="#FFF"
                                android:textSize="22sp" />

                            <TextView
                                android:layout_width="225dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mulie"
                                android:text="Upload all the fort of the world in reasonable price"
                                android:textColor="#FFF"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/upfortimg"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:padding="8dp" />
                    </LinearLayout>

            <LinearLayout
                android:id="@+id/wondersup"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/wonders_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/mulie"
                        android:text="Wonders of world"
                        android:textColor="#FFF"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulie"
                        android:text="Upload all beautifull wonders of world and some historic places"
                        android:textColor="#FFF"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/upwonderimg"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/wondericon"
                    android:layout_gravity="center"
                    android:padding="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>