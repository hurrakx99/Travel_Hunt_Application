<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:id="@+id/paytmview"
    tools:context=".payment.Paytm">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/paytmback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/backward" />

        <ImageView
            android:id="@+id/paytmapy"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@id/paytmback"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/paytm" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/payamt"
            android:textSize="16sp"
            android:textColor="#000"
            android:id="@+id/st"
            android:text="Your amount will be sent to Explore"/>

        <LinearLayout
            android:id="@+id/payamt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/paytmapy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulie"
                android:text="RS "
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/amtpaytm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulie"
                android:text="2000"
                android:textColor="#000"
                android:textSize="18sp" />

        </LinearLayout>
        <EditText
            android:id="@+id/paytmpersonname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/st"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bginput"
            android:drawableStart="@drawable/person"
            android:drawablePadding="5dp"
            android:editable="false"
            android:hint="Person full name"
            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/paytmupid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/paytmpersonname"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bginput"
            android:drawableStart="@drawable/custom_home"
            android:drawablePadding="5dp"
            android:hint="UPI ID"
            android:editable="false"
            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/paytmnote"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/paytmupid"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bginput"
            android:drawableStart="@drawable/custom_phone"
            android:drawablePadding="5dp"
            android:hint=""
            android:paddingStart="10dp" />

        <Button
            android:id="@+id/paytmnow"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/paytmnote"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/primary_btn_bg"
            android:fontFamily="@font/museo"
            android:text="Pay Now"
            android:textColor="#FFF" />
    </RelativeLayout>

</ScrollView>