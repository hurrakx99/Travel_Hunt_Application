        android:shape="rectangle">
        <corners
            android:radius="5dp"/>
        <stroke android:color="#2196F3"
            android:width="1dp"/>
    </shape>
</item>
    <item android:state_enabled="true">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="5dp"/>
            <stroke android:color="#B5B4B4"
                android:width="1dp"/>
        </shape>
    </item>

</selector>